<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".runtime"
    android:background="@drawable/poza">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/menushape"
        app:itemIconTint="@drawable/selectcolor"
        app:itemTextColor="@drawable/selectcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_bar">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".runtime"
        android:background="#0F233D">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="50dp"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/test"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:id="@+id/btn_cash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/baseline_menu_24"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Meniu"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="426dp">
                    <LinearLayout
                        android:id="@+id/layout_hide_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <ImageView
                                android:id="@+id/analizorclor"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/analizorclor"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Analizor Clor"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/bazinempty"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bazin Empty"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinful"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/bazinful"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bazin ful"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/bazinhalf"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bazin half"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/boil1"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Boil 1"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/boiler"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Boiler"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/button1_off"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Button1 Off"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/button1_off_p"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Button1 Off P"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/button1_on"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Button1 On"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/button1_on_p"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Button1 On P"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/button1off"
                                android:padding="5dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Button1 Off"
                                android:padding="5dp"
                                android:textAlignment="center"/>

                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/button1on"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/button2off"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/button2on"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/debitmetru"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/nivelbazin"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ph"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pipe_long"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pipe_long_left_down"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pipe_long_left_up"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pipe_long_right_up"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pipe_long_up"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pipe_right_down"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/presiuneapa"
                                android:padding="5dp"/>
                            <ImageView
                                android:id="@+id/bazinempty"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@drawable/temperature"
                                android:padding="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/miscare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/btn_cash_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/analizorclor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/analizorclor"
                    android:layout_gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_hide_show_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Analizor Clor"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
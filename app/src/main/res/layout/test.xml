<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/poza">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".test">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/top_background"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="126dp">


                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            tools:layout_editor_absoluteX="52dp"
                            tools:layout_editor_absoluteY="49dp" />

                        <EditText
                            android:id="@+id/editTextTextPersonName4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Name"
                            tools:layout_editor_absoluteX="122dp"
                            tools:layout_editor_absoluteY="32dp"
                            android:layout_gravity="center_horizontal"
                            android:paddingLeft="20dp"
                            android:hint="Session Name"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/input_bg"
                            android:textColor="@color/white"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/top_background">
                    <LinearLayout
                        android:id="@+id/btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Endpoint Authentification "
                            android:textSize="15sp"
                            android:layout_marginLeft="20dp"
                            />
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_hide_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- android:visibility="gone"-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="204dp">


                        <TextView
                            android:id="@+id/endpoint_url"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Endpoint Url:"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/security_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Security Mode:"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/endpoint_url"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/security_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Security Policy: "
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/security_mode"
                            tools:ignore="MissingConstraints" />

                        <EditText
                            android:id="@+id/endpoint"
                            android:layout_width="241dp"
                            android:layout_height="34dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginRight="32dp"
                            android:inputType="textPersonName"
                            android:hint="Endpoind url"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toEndOf="@+id/endpoint_url"
                            tools:ignore="MissingConstraints"
                            tools:layout_editor_absoluteY="16dp" />

                        <Spinner
                            android:id="@+id/security_spinner"
                            android:layout_width="164dp"
                            android:layout_height="23dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="45dp"
                            android:layout_marginRight="45dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.986"
                            app:layout_constraintStart_toEndOf="@+id/security_mode"
                            app:layout_constraintTop_toBottomOf="@+id/endpoint"
                            tools:ignore="MissingConstraints" />

                        <Spinner
                            android:id="@+id/policy_spinner"
                            android:layout_width="164dp"
                            android:layout_height="23dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="45dp"
                            android:layout_marginRight="45dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.97"
                            app:layout_constraintStart_toEndOf="@+id/security_policy"
                            app:layout_constraintTop_toBottomOf="@+id/security_spinner"
                            tools:ignore="MissingConstraints" />

                        <Spinner
                            android:id="@+id/message_spinner"
                            android:layout_width="164dp"
                            android:layout_height="23dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="45dp"
                            android:layout_marginRight="45dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.939"
                            app:layout_constraintStart_toEndOf="@+id/message_encoding"
                            app:layout_constraintTop_toBottomOf="@+id/policy_spinner" />

                        <TextView
                            android:id="@+id/message_encoding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="20dp"
                            android:text="Message Endcoding: "
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/security_policy" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="30dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/top_background">

                    <LinearLayout
                        android:id="@+id/btn_cash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Authentication Settings"
                            android:textSize="15sp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_hide_show1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- android:visibility="gone"-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="204dp">


                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginEnd="296dp"
                                android:layout_marginRight="296dp"
                                android:text="Endpoint Url:"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Security Mode:"
                                tools:ignore="MissingConstraints"
                                tools:layout_editor_absoluteX="16dp"
                                tools:layout_editor_absoluteY="71dp" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Security Policy: "
                                tools:layout_editor_absoluteX="13dp"
                                tools:layout_editor_absoluteY="112dp"
                                tools:ignore="MissingConstraints" />


                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="153dp"
                                android:layout_height="48dp"
                                tools:ignore="MissingConstraints"
                                tools:layout_editor_absoluteX="194dp"
                                tools:layout_editor_absoluteY="90dp" />

                            <EditText
                                android:id="@+id/editTextTextPassword3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="textPassword"
                                tools:layout_editor_absoluteX="158dp"
                                tools:layout_editor_absoluteY="136dp" />

                            <EditText
                                android:id="@+id/editTextTextPersonName3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="Name"
                                tools:layout_editor_absoluteX="148dp"
                                tools:layout_editor_absoluteY="16dp" />


                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <!--<LinearLayout
                        android:id="@+id/layout_hide_show"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="264"
                            android:textSize="24dp"
                            android:layout_gravity="center"
                            android:layout_margin="5sp"/>
